*, *::before, *::after
    padding 0
    margin 0
    box-sizing inherit 
    font-size 100%

html, body 
    box-sizing border-box
    position: relative;
    

        


/* Fonts */
@font-face
    font-family 'Metropolis'
    src url("../../public/fonts/Metropolis-Regular.otf")

@font-face
    font-family 'Josefin-Sans'
    src url("../../public/fonts/JosefinSans-Regular.ttf")

@font-face
    font-family 'Josefin-Light-Sans'
    src url("../../public/fonts/JosefinSans-Light.ttf")