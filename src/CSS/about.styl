@import "./mixins/mixins.styl"

/* Main About Section
____________________________________*/
.about
    height 100%
    min-height 100vh
    font-family "Josefin-Sans", Arial, Helvetica, sans-serif
    display flex
    flex-wrap wrap
    justify-content space-between
    background-image linear-gradient(to top, #160a0b, #201717, #2b2120, #372b29, #433633);
    color #DDD
    position relative
    z-index 1
    overflow hidden
    &:before
        content "About Me" 
        font-family: "Metropolis", Arial, Helvetica, sans-serif
        position absolute 
        top 100px
        right 20px
        width 150px
        display grid 
        place-items center
        height 150px
        border-radius 50%
        font-size 1.2rem
        background #222
        z-index: -1

.about__header
    flex 1 100%
    font-size 3rem
    padding 50px
    margin 0 auto
    margin-top 200px
    text-align left
    font-family: "Metropolis", Arial, Helvetica, sans-serif
    > p  
        font-size 1.2rem
        width 50%
        padding-top 20px
        line-height 1.5em
        text-align: justify
.about__title
    titleStyles(1.7rem, center) 
    &:before 
        content ""
        lineStyles()
        left 0
    &:after 
        content ""
        lineStyles()
        right 0

.about__content
    flex auto
    margin-bottom auto
    line-height 1.5em
    padding 45px
    text-align justify
    border-radius 10px
    background darken(#433633, 50%)
    color #CCC
 

/* Skills Section
____________________________________*/
.skills__box
        background lighten(#201717, 10%)
        margin 5px
        height 400px
        width auto
        display grid
        place-items center
        border-radius 5px
        color #DDD
        background #222
        position relative
        clip-path polygon(0 0, 100% 0, 100% 94%, 0% 100%);
        box-shadow: 0px 0px 9px 0px rgba(#000,0.6);
        > ul 
            display flex
            flex-wrap: wrap
            margin-top 60px
        > ul, li
            list-style none
            font-size 1.2rem
            line-height 2rem
            padding  5px
            text-align center
            font-family "Metropolis"
            display flex
            justify-content flex-start
            flex 1 100%
            > span:nth-child(2)
              margin auto
            

.skills__box-title
    position absolute
    top 0
    right 0
    left 0
    padding 20px
    background #DDD
    color #333333
    border-bottom-left-radius 50px
    border-bottom-right-radius 50px
    font-family "Metropolis", Arial, Helvetica, sans-serif
    text-align center

.skills__icon
    font-size 1.5rem

/* Workflow Section
____________________________________*/
.workflow__main
    padding 40px
    background darken(#160a0b, 40%)
    display grid
    place-items center
    line-height: 1.5em

.workflow__grid
    padding 20px

.workflow__box
     text-align: justify
     height auto
     padding 40px
     background lighten(#160a0b, 10%)
     height auto
     margin 10px
     min-height 350px
     box-shadow: 2px 2px 10px rgba(#000, .5)
     border-radius: 50px

.workflow__header
    padding 20px
    > h1
        font-size 1.7rem
        text-transform uppercase
        text-align left
        > span 
            color lighten(orange, 20%)
            padding-right 10px

.workflow__content
    display flex
    align-items center
    margin-top 20px
    font-family: "Metropolis", Arial, Helvetica, sans-serif

// Icons
.python
    color darken(purple, 10%)
.nodejs
    color darken(green, 20%)
.css3 
    color lighten(blue, 20%)
.html5
     color lighten(red, 20%)
.js 
    color lighten(yellow, 10%)
.reactjs
    color darken(aqua, 10%)
.brain 
    color darken(pink, 30%)



// Media Queries   
@media screen and (max-width 968px)
    .about__header
        padding 30px
        padding-bottom 40px
        > h1 
            font-size 2.5rem
        > span 
            width 100%
        > p  
            width 100%
    .about__content
        margin 0 
        padding 30px
        border-radius 0
        font-size 1.1rem
        overflow hidden
    .skills__box
        flex 1 auto
    .about__title
        &:before 
            display none
        &:after 
            display none



  